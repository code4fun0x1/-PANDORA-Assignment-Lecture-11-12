<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/iv_backgroind_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"

                android:src="@drawable/fossasia" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#67000000"
                android:padding="5dp"
                android:text="FOSSASIA"
                android:textColor="#fff"

                android:textSize="15sp" />

            <TextView
                android:textStyle="bold|italic"
                android:id="@+id/organiser_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/topic"
                android:background="#67000000"
                android:padding="5dp"
                android:text="FOSSASIA"
                android:textColor="#fff"

                android:textSize="18sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:orientation="horizontal"
    android:layout_weight="93"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_facebook_black_24dp" />

    <ImageButton
        android:id="@+id/github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

android:layout_marginLeft="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/github_circle" />

    <ImageButton
        android:id="@+id/gplus"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/google_plus" />

    <ImageButton
        android:id="@+id/youtube"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/youtube_play" />

    <ImageButton
        android:id="@+id/twitter"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/twitter" />
</LinearLayout>


            <ImageButton
                android:id="@+id/ib_expand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="7"
                android:background="?android:attr/selectableItemBackground"
                android:cropToPadding="true"
                android:elevation="2dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:tint="@color/cardview_shadow_start_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="100"
            android:orientation="horizontal">



        </LinearLayout>

        <LinearLayout
            android:id="@+id/body"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:background="#96000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="1dp"/>

            <TextView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:padding="10dp"
                android:text="SCHEDULE"

                />
            <View
                android:layout_width="match_parent"
                android:background="#80000000"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/discription"
                android:textColor="#a9000000"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:background="#80000000"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>